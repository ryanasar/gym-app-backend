generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  supabaseId   String?       @unique
  hasCompletedOnboarding Boolean @default(false)
  name         String?
  username     String?       @unique
  workouts     Workout[]
  workoutSessions WorkoutSession[]
  createdAt    DateTime      @default(now())
  profile      Profile?
  splits       Split[]
  followedBy   Follows[]     @relation("followedBy")
  following    Follows[]     @relation("following")
  achievements Achievement[]
  posts        Post[]        @relation("UserPosts")
  comments     Comment[]
  likes        Like[]

  @@index([username])
}

model Follows {
  followedBy   User @relation("followedBy", fields: [followedById], references: [id], onDelete: Cascade)
  followedById Int
  following    User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId  Int

  @@id([followingId, followedById])
}

model Profile {
  id        Int     @id @default(autoincrement())
  bio       String?
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int     @unique
  isPrivate Boolean?
}

model Split {
  id          Int          @id @default(autoincrement())
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  emoji       String?
  description String?
  isPublic    Boolean?     @default(false)
  numDays     Int?
  workoutDays WorkoutDay[]
  workoutSessions WorkoutSession[]
  likes       Like[]
  comments    Comment[]
  Post        Post[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
}

model WorkoutDay {
  id                 Int          @id @default(autoincrement())
  dayIndex           Int?
  workoutName        String?
  workoutDescription String?
  workoutType        String?
  emoji              String?
  isRest             Boolean?     @default(false)
  exercises          Json?
  workoutId          Int?
  workout            Workout?     @relation(fields: [workoutId], references: [id], onDelete: SetNull)
  splitId            Int?
  split              Split?       @relation(fields: [splitId], references: [id], onDelete: Cascade)
}

model Workout {
  id           Int           @id @default(autoincrement())
  title        String?
  notes        String?
  userId       Int
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises    Exercise[]
  achievements Achievement[]
  Post         Post[]
  WorkoutDay   WorkoutDay[]

  @@index([userId])
}

model ExerciseTemplate {
  id          Int                       @id @default(autoincrement())
  name        String                    @unique
  description String?
  imageUrl    String?
  equipment   String?
  difficulty  String?
  muscles     MuscleExerciseTemplate[]
  exercises   Exercise[]
  workoutSessionExercises WorkoutSessionExercise[]
}

model MuscleExerciseTemplate {
  muscleId           Int
  exerciseTemplateId Int
  muscle             Muscle           @relation(fields: [muscleId], references: [id], onDelete: Cascade)
  exerciseTemplate   ExerciseTemplate @relation(fields: [exerciseTemplateId], references: [id], onDelete: Cascade)

  @@id([muscleId, exerciseTemplateId])
}

model Exercise {
  id                 Int              @id @default(autoincrement())
  workoutId          Int
  exerciseTemplateId Int
  sets               Int?
  reps               Int?
  weight             Int?
  workout            Workout          @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  template           ExerciseTemplate @relation(fields: [exerciseTemplateId], references: [id])
  muscles            MuscleExercise[]
}

model Muscle {
  id        Int                      @id @default(autoincrement())
  name      String?                  @unique
  exercises MuscleExercise[]
  templates MuscleExerciseTemplate[]
}

model MuscleExercise {
  muscleId   Int
  exerciseId Int
  muscle     Muscle   @relation(fields: [muscleId], references: [id], onDelete: Cascade)
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@id([muscleId, exerciseId])
}

// Workout Session Models - for tracking completed workouts
model WorkoutSession {
  id           Int                      @id @default(autoincrement())
  userId       Int
  user         User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  splitId      Int?
  split        Split?                   @relation(fields: [splitId], references: [id], onDelete: SetNull)
  dayName      String
  weekNumber   Int?
  dayNumber    Int?
  startedAt    DateTime                 @default(now())
  completedAt  DateTime?
  notes        String?
  exercises    WorkoutSessionExercise[]
  posts        Post[]

  @@index([userId])
  @@index([completedAt])
}

model WorkoutSessionExercise {
  id               Int             @id @default(autoincrement())
  workoutSessionId Int
  workoutSession   WorkoutSession  @relation(fields: [workoutSessionId], references: [id], onDelete: Cascade)
  exerciseName     String
  exerciseTemplateId Int?
  template         ExerciseTemplate? @relation(fields: [exerciseTemplateId], references: [id], onDelete: SetNull)
  orderIndex       Int
  notes            String?
  sets             WorkoutSet[]

  @@index([workoutSessionId])
}

model WorkoutSet {
  id                       Int                    @id @default(autoincrement())
  workoutSessionExerciseId Int
  exercise                 WorkoutSessionExercise @relation(fields: [workoutSessionExerciseId], references: [id], onDelete: Cascade)
  setNumber                Int
  weight                   Float?
  reps                     Int?
  rpe                      Float?
  completed                Boolean                @default(false)
  completedAt              DateTime?

  @@index([workoutSessionExerciseId])
}

model Achievement {
  id        Int      @id @default(autoincrement())
  workoutId Int?
  userId    Int
  workout   Workout? @relation(fields: [workoutId], references: [id], onDelete: SetNull)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts     Post[]

  @@index([userId])
}

model Post {
  id               Int             @id @default(autoincrement())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  title            String?
  description      String?
  published        Boolean         @default(false)
  authorId         Int
  author           User            @relation("UserPosts", fields: [authorId], references: [id], onDelete: Cascade)
  workoutId        Int?
  workout          Workout?        @relation(fields: [workoutId], references: [id], onDelete: SetNull)
  workoutSessionId Int?
  workoutSession   WorkoutSession? @relation(fields: [workoutSessionId], references: [id], onDelete: SetNull)
  splitId          Int?
  split            Split?          @relation(fields: [splitId], references: [id], onDelete: SetNull)
  achievementId    Int?
  achievement      Achievement?    @relation(fields: [achievementId], references: [id], onDelete: SetNull)
  likes            Like[]
  comments         Comment[]

  @@index([authorId])
}

model Comment {
  id            Int          @id @default(autoincrement())
  userId        Int
  author        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  content       String?
  timestamp     DateTime     @default(now())
  postId        Int?
  post          Post?        @relation(fields: [postId], references: [id], onDelete: Cascade)
  splitId       Int?
  split         Split?       @relation(fields: [splitId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Like {
  id            Int          @id @default(autoincrement())
  userId        Int
  author        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  timestamp     DateTime     @default(now())
  postId        Int?
  post          Post?        @relation(fields: [postId], references: [id], onDelete: Cascade)
  splitId       Int?
  split         Split?       @relation(fields: [splitId], references: [id], onDelete: Cascade)

  @@index([userId])
}
